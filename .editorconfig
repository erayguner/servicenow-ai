# EditorConfig helps maintain consistent coding styles across editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.py]
indent_size = 4
max_line_length = 100

[*.go]
indent_style = tab
indent_size = 4

[*.{tf,tfvars}]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.sh]
indent_size = 2
