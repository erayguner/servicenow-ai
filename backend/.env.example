# Server Configuration
PORT=8080
NODE_ENV=production

# GCP Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# Firestore Configuration
FIRESTORE_DATABASE_ID=(default)

# Cloud SQL Configuration (if using PostgreSQL instead of Firestore)
CLOUD_SQL_CONNECTION_NAME=project:region:instance
DB_USER=agentdb_user
DB_NAME=agentdb
DB_PASSWORD_SECRET=db-password

# Secret Manager Secret Names
ANTHROPIC_API_KEY_SECRET=anthropic-api-key
OPENAI_API_KEY_SECRET=openai-api-key
VERTEXAI_API_KEY_SECRET=vertexai-api-key

# Application Configuration
MAX_CONVERSATION_HISTORY=50
DEFAULT_MODEL=claude-3-5-sonnet-20241022
SESSION_TIMEOUT_MINUTES=60

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
