# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# RDS PostgreSQL
RDS_HOST=prod-postgres.xxxxx.us-east-1.rds.amazonaws.com
RDS_PORT=5432
RDS_USER=postgres
RDS_PASSWORD=CHANGE_ME_USE_SECRETS_MANAGER
RDS_DATABASE=agentdb

# DynamoDB Tables
DYNAMODB_CONVERSATIONS_TABLE=prod-conversations
DYNAMODB_SESSIONS_TABLE=prod-sessions

# ElastiCache Redis
REDIS_HOST=prod-redis.xxxxx.cache.amazonaws.com
REDIS_PORT=6379
REDIS_AUTH_TOKEN=CHANGE_ME_STRONG_PASSWORD

# S3 Buckets
S3_KNOWLEDGE_BUCKET=servicenow-ai-knowledge-documents-prod
S3_CHUNKS_BUCKET=servicenow-ai-document-chunks-prod
S3_UPLOADS_BUCKET=servicenow-ai-user-uploads-prod

# SNS/SQS
SNS_TICKET_EVENTS_ARN=arn:aws:sns:us-east-1:123456789012:prod-ticket-events
SQS_TICKET_EVENTS_URL=https://sqs.us-east-1.amazonaws.com/123456789012/prod-ticket-events-queue
SNS_NOTIFICATION_ARN=arn:aws:sns:us-east-1:123456789012:prod-notification-requests
SQS_NOTIFICATION_URL=https://sqs.us-east-1.amazonaws.com/123456789012/prod-notification-requests-queue

# Secrets Manager
ANTHROPIC_API_KEY_SECRET=prod/anthropic-api-key
OPENAI_API_KEY_SECRET=prod/openai-api-key

# Application Settings
PORT=8080
NODE_ENV=production
MAX_CONVERSATION_HISTORY=50
DEFAULT_MODEL=claude-3-5-sonnet-20241022
SESSION_TIMEOUT_MINUTES=60
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGINS=https://your-frontend-domain.com
