# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# GCP Configuration (for local development)
GCP_PROJECT_ID=your-project-id
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Database (defaults for docker-compose)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/servicenow_ai_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=servicenow_ai_dev

# Redis
REDIS_URL=redis://localhost:6379

# Backend
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001

# Anthropic API (for AI features)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Firestore Emulator (for local development)
FIRESTORE_EMULATOR_HOST=localhost:8080
