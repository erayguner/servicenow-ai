{
  "alarmConfiguration": {
    "enableActionsOnInsightAlarms": true,
    "enabled": true,
    "evaluationPeriods": 1,
    "snsTopics": {
      "bedrock-alerts": {
        "arn": "arn:aws:sns:us-east-1:123456789012:bedrock-alerts",
        "description": "General Bedrock agent alerts"
      },
      "compliance-alerts": {
        "arn": "arn:aws:sns:us-east-1:123456789012:compliance-alerts",
        "description": "Compliance violation alerts"
      },
      "cost-alerts": {
        "arn": "arn:aws:sns:us-east-1:123456789012:cost-alerts",
        "description": "Cost anomaly alerts"
      },
      "security-alerts": {
        "arn": "arn:aws:sns:us-east-1:123456789012:security-alerts",
        "description": "Security and compliance alerts"
      }
    },
    "treatMissingData": "notBreaching"
  },
  "dashboards": {
    "bedrock-agents-overview": {
      "description": "High-level dashboard for agent invocation metrics, success rates, token usage, and knowledge base performance",
      "enabled": true,
      "name": "Bedrock Agents Overview",
      "period": 300,
      "refreshInterval": 60,
      "tags": {
        "Environment": "Production",
        "Service": "BedrockAgents",
        "Type": "Overview"
      },
      "timezone": "UTC"
    },
    "bedrock-compliance-dashboard": {
      "description": "Compliance metrics including Config rule compliance, encryption coverage, backup compliance, and patch status",
      "enabled": true,
      "name": "Bedrock Compliance Dashboard",
      "notificationChannels": [
        "arn:aws:sns:us-east-1:123456789012:compliance-alerts"
      ],
      "period": 300,
      "refreshInterval": 300,
      "tags": {
        "Environment": "Production",
        "Service": "Compliance",
        "Type": "Compliance"
      },
      "timezone": "UTC"
    },
    "bedrock-cost-dashboard": {
      "description": "Cost tracking by service, agent type, and projected monthly spending",
      "enabled": true,
      "name": "Bedrock Cost Dashboard",
      "notificationChannels": [
        "arn:aws:sns:us-east-1:123456789012:cost-alerts"
      ],
      "period": 86400,
      "refreshInterval": 3600,
      "tags": {
        "Environment": "Production",
        "Service": "FinanceOps",
        "Type": "Cost"
      },
      "timezone": "UTC"
    },
    "bedrock-performance-dashboard": {
      "description": "Performance metrics including Lambda execution times, Step Functions duration, API latency, and DynamoDB throttles",
      "enabled": true,
      "name": "Bedrock Performance Dashboard",
      "period": 60,
      "refreshInterval": 60,
      "tags": {
        "Environment": "Production",
        "Service": "Performance",
        "Type": "Performance"
      },
      "timezone": "UTC"
    },
    "bedrock-security-dashboard": {
      "description": "Security metrics including GuardDuty findings, authentication failures, IAM policy changes, and WAF metrics",
      "enabled": true,
      "name": "Bedrock Security Dashboard",
      "notificationChannels": [
        "arn:aws:sns:us-east-1:123456789012:security-alerts"
      ],
      "period": 300,
      "refreshInterval": 30,
      "tags": {
        "Environment": "Production",
        "Service": "Security",
        "Type": "Security"
      },
      "timezone": "UTC"
    }
  },
  "dataRetention": {
    "detailedMetrics": 14,
    "logs": 30,
    "metrics": 63
  },
  "insightsQueries": {
    "defaultTimeRange": 3600,
    "enabled": true,
    "maxResults": 1000,
    "tags": {
      "Environment": "Production",
      "Service": "BedrockAgents"
    }
  },
  "metricFilters": {
    "enabled": true,
    "logGroups": {
      "/aws/apigateway/bedrock-agent-api": {
        "description": "API Gateway access logs",
        "retentionInDays": 7
      },
      "/aws/lambda/bedrock-agent-orchestrator": {
        "description": "Bedrock Agent Orchestrator Lambda logs",
        "retentionInDays": 30
      },
      "/aws/stepfunctions/bedrock-workflows": {
        "description": "Step Functions execution logs",
        "retentionInDays": 30
      }
    }
  },
  "regions": [
    "us-east-1",
    "us-west-2",
    "eu-west-1"
  ]
}
